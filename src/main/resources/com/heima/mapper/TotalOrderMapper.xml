<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.heima.mapper.TotalOrderMapper">

    <!--    新增-->
    <insert id="insert">
        insert into db1.t_totalOrder(price, isClear, lastUpdateBy, createTime, updateTime)
        values (
                             #{price}, #{isClear}, #{lastUpdateBy}, NOW(), NOW()
        )
    </insert>


    <!--    刪除-->
    <delete id="delete">
        <if test="ids != null and ids != ''">
            delete from t_totalOrder where totalOrderID in
            <foreach collection="ids" item="totalOrderID" separator="," open="(" close=")">
                #{totalOrderID}
            </foreach>
        </if>
    </delete>

    <update id="update">
        update t_totalOrder
        <set>
            <if test=" price != null and price != ''">price = #{price} ,</if>
            <if test=" isClear != null and isClear != ''">isClear = #{isClear},</if>
            <if test=" lastUpdateBy != null and lastUpdateBy != ''">lastUpdateBy = #{lastUpdateBy},</if>

            updateTime = NOW()
        </set>
        where totalOrderID = #{totalOrderID};
    </update>

    <!--    查詢所有-->
    <select id="selectAll" resultType="com.heima.pojo.TotalOrder">
        select * from db1.t_totalOrder;
    </select>

    <select id="selectByID" resultType="com.heima.pojo.TotalOrder">
        select * from db1.t_totalOrder where totalOrderID = #{totalOrderID};
    </select>

</mapper>
