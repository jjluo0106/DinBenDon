    <!--    刪除-->
    <delete id="delete">
        <if test="ids != null and ids != ''">
            delete from t_userRecord where userRecordID in
            <foreach collection="ids" item="userRecordID" separator="," open="(" close=")">
                #{userRecordID}
            </foreach>
        </if>
    </delete>

    <update id="update">
        update t_userRecord
        <set>
            <if test=" userID != null and userID != ''">userID = #{userID} ,</if>
            <if test=" snackPrice != null and snackPrice != ''">snackPrice = #{snackPrice},</if>
            <if test=" dinnerPrice != null and dinnerPrice != ''">dinnerPrice = #{dinnerPrice},</if>
            <if test=" userActualPrice != null and userActualPrice != ''">userActualPrice = #{userActualPrice},</if>
            <if test=" isPaid != null and isPaid != ''">isPaid = #{isPaid},</if>
            <if test=" lastUpdateBy != null and lastUpdateBy != ''">lastUpdateBy = #{lastUpdateBy},</if>

            updateTime = NOW()
        </set>
        where userRecordID = #{userRecordID};
    </update>

    <!--    查詢所有-->
    <select id="selectAll" resultType="com.heima.pojo.UserRecord">
        select * from db1.t_userRecord;
    </select>

    <select id="selectByID" resultType="com.heima.pojo.UserRecord">
        select * from db1.t_userRecord where userRecordID = #{userRecordID};
    </select>

</mapper>
